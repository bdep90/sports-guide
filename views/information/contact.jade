.col-xs-10.col-xs-offset-1
  h1.text-center CONTACT US
  form.form-horizontal(method='POST', action='contact/send')
    .form-group
      label.col-sm-2.control-label(for='name') NAME
      .col-sm-10
        input.form-control.col-sm-10(type='text', name='name', placeholder='Name')
    .form-group
      label.col-sm-2.control-label(for='email') EMAIL
      .col-sm-10
        input.form-control.col-sm-10(type='email', name='email', placeholder='Email')
    .form-group
      label.col-sm-2.control-label(for='subject') SUBJECT
      .col-sm-10
        input.form-control.col-sm-10(type='text', name='subject', placeholder='Subject')
    .form-group
      label.col-sm-2.control-label(for='message') MESSAGE
      .col-sm-10
        textarea.form-control.col-sm-10(name='message', rows='10', placeholder='Message')
    .form-group
      .col-sm-10.col-sm-offset-2
        button.btn.btn-primary.form-control(type='submit') Submit
